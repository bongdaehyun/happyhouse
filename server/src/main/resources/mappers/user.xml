<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.repo.UserRepo">


<!-- 로그인 start login -->
	<select id="login" resultType="com.ssafy.happyhouse.dto.UserDto">
		SELECT * FROM user where userid=#{userid} and userpw=#{userpw}
	</select>
<!-- 로그인 end -->	
	
<!-- 회원 가입(등록) start register -->
	<insert id="register">
		insert into user values(#{userid},#{userpw},#{username},#{useremail},#{code})
	</insert>	
<!-- 회원 가입(등록) end -->	

<!-- 회원 수정 정보 가져오기 start selectUser -->
	<select id="selectUser" resultType="com.ssafy.happyhouse.dto.UserDto">
		select * from user where userid=#{userid}
	</select>
<!-- 회원 수정 정보 가져오기 end -->

<!-- 회원 수정 star modifyUser -->
	<update id="modifyUser">
		update user
		set userpw=#{userpw},username=#{username},useremail=#{useremail}
		where userid=#{userid}
	</update>
<!-- 회원 수정 end -->

<!-- 회원 탈퇴 start -->
	<delete id="secessionUser">
		delete from user where userid=#{userid}
	</delete>
<!-- 회원 탈퇴 end -->
	
</mapper>