<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.repo.QnaRepo">

<!-- 공지 게시글 등록 start -->
	<insert id="registerQna">
		insert into qna (qnatitle,qnawriter,qnacontent,date)values(#{qnatitle},#{qnawriter},#{qnacontent},#{date})
	</insert>
<!-- 공지 게시글 등록 end -->

	<select id="listQna" resultType="com.ssafy.happyhouse.dto.QnaDto">
		select * from qna
	</select>
	
<!-- 공지 게시글 수정 start -->
	<update id="modifyQna">
		update qna 
		set  qnatitle=#{qnatitle},qnacontent=#{qnacontent},date=#{date}
		where qnaid=#{qnaid}
	</update>
<!-- 공지 게시글 수정 end -->


<!-- 공지 게시글 삭제 start -->
	<delete id="deleteQna">
		delete from qna where qnaid=#{qnaid}
	</delete>
<!-- 공지 게시글 삭제 start -->


<!-- 공지 게시글 상세 선택 start  -->
	<select id="selectQna" resultType="com.ssafy.happyhouse.dto.QnaDto">
		select * from qna where qnaid=#{qnaid}
	</select>
<!-- 공지 게시글 상세 선택 end  -->


<!-- 글제목으로 검색 start -->
	<select id="selectTitle" resultType="com.ssafy.happyhouse.dto.QnaDto">
		select * from qna where qnatitle like CONCAT('%', #{qnatitle}, '%')
	</select>
<!-- 글제목으로 검색 end -->

<!--  글제목으로 검색 start
	<select id="selecttitle">
		select * from qna where qnatitle=#{qnatitle}
	</select>
글제목으로 검색 end -->
</mapper>